@{
    ViewData["Title"] = "Teklif Al";
}

<section class="page-hero">
    <div class="glow-effect" style="right: 50%; top: -100px; width: 800px; height: 800px; opacity: 0.15;"></div>
    <div class="container hero-animate">
        <span class="hero-badge rounded-pill px-3 py-2 mb-3 d-inline-block">
            <span style="color: var(--primary-red);">●</span> Ücretsiz Fiyat Analizi
        </span>
        <h1 class="page-title">
            Binanız İçin En İyi <br> <span class="highlight-red">Yönetim Teklifini</span> Alın.
        </h1>
        <p class="section-desc">
            Aşağıdaki formu doldurun, yapay zeka destekli sistemimiz ve uzman ekibimiz
            sizin için en optimize yönetim bütçesini hazırlasın.
        </p>
    </div>
</section>

<section class="py-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 hero-animate">

                <div class="glass-panel p-4 p-md-5">
                    <form>
                        <div class="row g-5">

                            <div class="col-lg-6">
                                <h4 class="text-white mb-4 d-flex align-items-center gap-2">
                                    <i class="fas fa-building text-danger"></i> Bina Özellikleri
                                </h4>

                                <div class="row g-4">
                                    <div class="col-12">
                                        <label class="form-label-custom">Site / Apartman Adı</label>
                                        <input type="text" class="form-control-premium" placeholder="Örn: Zirve Park Evleri">
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label-custom">İl</label>
                                        <select class="form-control-premium">
                                            <option>İstanbul</option>
                                            <option>Ankara</option>
                                            <option>İzmir</option>
                                            <option>Diğer</option>
                                        </select>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label-custom">İlçe</label>
                                        <input type="text" class="form-control-premium" placeholder="Örn: Kadıköy">
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label-custom">Blok Sayısı</label>
                                        <input type="number" class="form-control-premium" placeholder="Örn: 2">
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label-custom">Bağımsız Bölüm (Daire) Sayısı</label>
                                        <input type="number" class="form-control-premium" placeholder="Örn: 48">
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label-custom">Mevcut Isınma Tipi</label>
                                        <select class="form-control-premium">
                                            <option>Merkezi Sistem (Payölçer)</option>
                                            <option>Merkezi Sistem (Kömür/Kalorifer)</option>
                                            <option>Bireysel Kombi</option>
                                            <option>Yerden Isıtma</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <h4 class="text-white mb-4 d-flex align-items-center gap-2">
                                    <i class="fas fa-user-circle text-danger"></i> Yetkili Bilgileri
                                </h4>

                                <div class="row g-4">
                                    <div class="col-12">
                                        <label class="form-label-custom">Adınız Soyadınız</label>
                                        <input type="text" class="form-control-premium" placeholder="Adınız">
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label-custom">Telefon</label>
                                        <input type="tel" class="form-control-premium" placeholder="(5XX) ...">
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label-custom">E-Posta</label>
                                        <input type="email" class="form-control-premium" placeholder="Email adresiniz">
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label-custom">Eklemek İstedikleriniz (Opsiyonel)</label>
                                        <textarea class="form-control-premium" style="min-height: 120px;" placeholder="Örn: Şu anki yönetimden memnun değiliz, güvenlik personeli de istiyoruz..."></textarea>
                                    </div>

                                    <div class="col-12 pt-3">
                                        <button type="submit" class="btn-premium w-100 py-3 d-flex align-items-center justify-content-center gap-2">
                                            <span>Ücretsiz Teklif İste</span>
                                            <i class="fas fa-arrow-right"></i>
                                        </button>
                                        <p class="text-center mt-3 text-muted small">
                                            <i class="fas fa-lock me-1"></i> Bilgileriniz 256-bit SSL ile korunmaktadır.
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
