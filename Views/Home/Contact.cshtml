@{
    ViewData["Title"] = "İletişim";
}

<section class="page-hero">
    <div class="container hero-animate">
        <h1 class="page-title">
            Size Nasıl <span class="highlight-red">Yardımcı</span> Olabiliriz?
        </h1>
        <p class="section-desc">
            Teklif almak, soru sormak veya tanışmak için bize ulaşın.
            Ekibimiz en kısa sürede dönüş yapacaktır.
        </p>
    </div>
</section>

<section class="py-5 mb-5">
    <div class="container">
        <div class="row g-5">

            <div class="col-lg-5 hero-animate">
                <div class="contact-info-box h-100 d-flex flex-column justify-content-between">
                    <div>
                        <h3 class="text-white mb-5">İletişim Bilgileri</h3>

                        <div class="contact-item">
                            <div class="contact-icon"><i class="fas fa-map-marker-alt"></i></div>
                            <div>
                                <h6 class="text-white mb-1">Genel Merkez</h6>
                                <p class="text mb-0">Maslak Mah. Büyükdere Cad.<br>No: 123, Sarıyer / İstanbul</p>
                            </div>
                        </div>

                        <div class="contact-item">
                            <div class="contact-icon"><i class="fas fa-phone-alt"></i></div>
                            <div>
                                <h6 class="text-white mb-1">Telefon</h6>
                                <p class="text mb-0">+90 (212) 345 67 89</p>
                                <small class="text">Hafta içi: 09:00 - 18:00</small>
                            </div>
                        </div>

                        <div class="contact-item">
                            <div class="contact-icon"><i class="fas fa-envelope"></i></div>
                            <div>
                                <h6 class="text-white mb-1">E-Posta</h6>
                                <p class="text mb-0">info@zirveyonetim.com.tr</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48107.0863923301!2d28.98522308709424!3d41.109825447781395!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab5d5b768bd19%3A0x6b15e4c0d1c7d21c!2sMaslak%2C%20Sariyer%2FIstanbul!5e0!3m2!1sen!2str!4v1703080000000!5m2!1sen!2str"
                                class="map-frame"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 hero-animate">
                <div class="glass-panel h-100 p-4 p-md-5">
                    <h3 class="text-white mb-2">Mesaj Gönderin</h3>
                    <p class="text mb-4">Aşağıdaki formu doldurun, sizi arayalım.</p>

                    <form>
                        <div class="row g-4">

                            <div class="col-md-6">
                                <label class="form-label-custom">Adınız Soyadınız</label>
                                <input type="text" class="form-control-premium" placeholder="Adınız Soyadınız">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label-custom">Telefon Numaranız</label>
                                <input type="tel" class="form-control-premium" placeholder="(5XX) XXX XX XX">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label-custom">E-Posta Adresi</label>
                                <input type="email" class="form-control-premium" placeholder="ornek@email.com">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label-custom">Konu</label>
                                <select class="form-control-premium">
                                    <option value="" disabled selected>Seçiniz...</option>
                                    <option>Yönetim Teklifi Almak İstiyorum</option>
                                    <option>Arıza / Şikayet</option>
                                    <option>İş Başvurusu</option>
                                    <option>Diğer</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label-custom">Mesajınız</label>
                                <textarea class="form-control-premium" placeholder="Bize iletmek istediğiniz detaylar..."></textarea>
                            </div>

                            <div class="col-12 pt-2">
                                <button type="submit" class="btn-premium w-100 py-3 d-flex align-items-center justify-content-center gap-2">
                                    <span>Mesajı Gönder</span>
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                            <div class="col-12 text-center mt-4">
                                <p class="contact-quote">
                                    "Sorunları dinliyor, <span class="gradient-text">çözümleri üretiyoruz.</span> <br>
                                    Çünkü huzurunuz, bizim önceliğimiz."
                                </p>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>