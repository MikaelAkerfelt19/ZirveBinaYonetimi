@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <div class="row justification-content-center">
            <div class="col-lg-10 mx-auto">
                <span class="d-inline-block py-1 px-3 rounded-pill bg-light-custom text-secondary-custom fw-bold mb-4 border border-gold">
                    Profesyonel Bina & Tesis Yönetimi
                </span>
                <h1 class="hero-title mb-4">
                    Yaşam Alanlarınız İçin <br>
                    <span class="text-primary-custom">Zirve</span> Standartları
                </h1>
                <p class="hero-subtitle mx-auto" style="max-width: 700px;">
                    Apartman, site, plaza ve tesis yönetiminde şeffaf, güvenilir ve teknolojik çözümler sunuyoruz. 
                    Komşuluk ilişkilerinizi korurken, yaşam kalitenizi artırıyoruz.
                </p>
                <div class="d-flex gap-3 justify-content-center mt-5">
                    <a href="#offer-form" class="btn btn-primary-custom btn-lg rounded-pill px-5">Teklif İste</a>
                    <a href="/Home/Services" class="btn btn-outline-custom btn-lg rounded-pill px-5">Hizmetlerimiz</a>
                </div>
            </div>
        </div>
        <!-- Abstract Decoration (Optional) -->
        <div class="mt-5 pt-4">
            <!-- <img src="/images/hero-building.png" style="max-width: 80%; border-radius: 12px; box-shadow: 0 20px 40px rgba(0,0,0,0.1);" /> -->
            <!-- Placeholder for hero image -->
            <div style="height: 400px; background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%); border-radius: 20px; display: flex; align-items: center; justify-content: center; border: 1px solid rgba(0,0,0,0.05);">
                <div class="text-center text-muted">
                    <i class="bi bi-building fs-1 mb-3 d-block"></i>
                    <span>Zirve Kurumsal Görsel Alanı</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features / Why Us -->
<section class="section-padding bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Neden Zirve Yönetim?</h2>
            <p class="text-muted fs-5">Tecrübemiz ve uzman kadromuzla fark yaratıyoruz.</p>
        </div>
        
        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4>Güven ve Şeffaflık</h4>
                    <p class="text-muted">
                        Tüm mali süreçlerimiz şeffaftır. Online sistem üzerinden gelir-gider takibi yapabilirsiniz.
                    </p>
                </div>
            </div>
            <!-- Feature 2 -->
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h4>Uzman Kadro</h4>
                    <p class="text-muted">
                        Sertifikalı yöneticiler, teknik personel ve hukuk danışmanlarımızla yanınızdayız.
                    </p>
                </div>
            </div>
            <!-- Feature 3 -->
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <i class="bi bi-laptop"></i>
                    </div>
                    <h4>Dijital Çözümler</h4>
                    <p class="text-muted">
                        Mobil uygulama entegrasyonu ile aidat ödeme ve talep oluşturma kolaylığı.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Process Steps -->
<section class="section-padding bg-light-custom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5">
                <h2 class="section-title mb-4">Yönetim Sürecimiz</h2>
                <p class="fs-5 text-muted mb-4">
                    Siz sadece yaşamın keyfini sürün, yönetimi profesyonellere bırakın.
                    İşe başlama sürecimiz 4 adımda tamamlanır.
                </p>
                <a href="/Home/Contact" class="btn btn-primary-custom rounded-pill">Detaylı Bilgi Al</a>
            </div>
            <div class="col-lg-7">
                <div class="row g-4">
                    <!-- Step 1 -->
                    <div class="col-md-6">
                        <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-gold h-100">
                            <span class="display-4 fw-bold text-secondary-custom opacity-25">01</span>
                            <h5 class="mt-2 text-dark">Keşif ve Analiz</h5>
                            <p class="small text-muted mb-0">Binanızın ihtiyaçlarını yerinde inceliyor, eksikleri tespit ediyoruz.</p>
                        </div>
                    </div>
                    <!-- Step 2 -->
                    <div class="col-md-6">
                        <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-gold h-100">
                            <span class="display-4 fw-bold text-secondary-custom opacity-25">02</span>
                            <h5 class="mt-2 text-dark">Planlama</h5>
                            <p class="small text-muted mb-0">İşletme projesini hazırlıyor ve bütçenizi optimize ediyoruz.</p>
                        </div>
                    </div>
                    <!-- Step 3 -->
                    <div class="col-md-6">
                        <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-gold h-100">
                            <span class="display-4 fw-bold text-secondary-custom opacity-25">03</span>
                            <h5 class="mt-2 text-dark">Uygulama</h5>
                            <p class="small text-muted mb-0">Temizlik, güvenlik ve teknik bakım hizmetlerini başlatıyoruz.</p>
                        </div>
                    </div>
                    <!-- Step 4 -->
                    <div class="col-md-6">
                        <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-gold h-100">
                            <span class="display-4 fw-bold text-secondary-custom opacity-25">04</span>
                            <h5 class="mt-2 text-dark">Raporlama</h5>
                            <p class="small text-muted mb-0">Aylık düzenli raporlarla yapılan işleri sunuyoruz.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Offer Form Section -->
<section id="offer-form" class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="bg-dark-custom text-white p-5 rounded-4 shadow-lg position-relative overflow-hidden">
                    <!-- Decorative Circle -->
                    <div style="position: absolute; top: -50px; right: -50px; width: 200px; height: 200px; background: var(--zirve-red); opacity: 0.1; border-radius: 50%;"></div>
                    
                    <div class="text-center mb-5 position-relative">
                        <h2 class="text-white mb-3">Hemen Teklif Alın</h2>
                        <p class="text-white-50">7/24 hizmet anlayışımızla tanışmak için formu doldurun.</p>
                    </div>
                    
                    <form class="position-relative">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-white-50 small">Adınız Soyadınız</label>
                                <input type="text" class="form-control bg-transparent border-secondary text-white" placeholder="İsim Soyisim">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-white-50 small">Telefon Numaranız</label>
                                <input type="tel" class="form-control bg-transparent border-secondary text-white" placeholder="0555...">
                            </div>
                            <div class="col-12">
                                <label class="form-label text-white-50 small">Mesajınız / Talep Detayı</label>
                                <textarea class="form-control bg-transparent border-secondary text-white" rows="3" placeholder="Yönetim talebiniz hakkında kısa bilgi..."></textarea>
                            </div>
                            <div class="col-12 mt-4 text-center">
                                <button type="submit" class="btn btn-primary-custom w-100 py-3 fw-bold">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
