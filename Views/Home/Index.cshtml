@{
    ViewData["Title"] = "Modern Yönetim";
}

<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0 hero-animate">
                <div class="d-inline-block px-3 py-1 mb-4 rounded-pill border border-secondary text" style="font-size: 0.85rem; background: rgba(255,255,255,0.05);">
                    🚀 Yeni Nesil Bina Asistanınız
                </div>

                <h1 class="display-1">
                    Binaları Yönetmenin <br>
                    <span class="highlight-red">Zirve</span> Noktası.
                </h1>

                <p class="lead text mb-5" style="font-size: 1.2rem; line-height: 1.8;">
                    Apartman ve site yönetiminde karmaşaya son verin.
                    Finansal raporlar, aidat takibi ve güvenlik tek bir ekranda.
                </p>

                <div class="d-flex gap-3">
                    <a href="#" class="btn-premium">Hemen Başlayın</a>
                    <a href="#" class="btn btn-outline-premium">Demo İncele</a>
                </div>
            </div>

            <div class="col-lg-5 offset-lg-1 hero-animate">
                <div class="position-relative">
                    <div class="glow-effect" style="top: -50px; right: -50px;"></div>

                    <div class="glass-panel">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <small class="text d-block">Yönetim Paneli</small>
                                <h5 class="mb-0 text-white">Zirve Park Evleri</h5>
                            </div>
                            <span class="badge bg-success bg-opacity-25 text-success px-3 py-2 rounded-pill">● Sistem Aktif</span>
                        </div>

                        <div class="stat-item">
                            <div class="stat-icon"><i class="fas fa-wallet"></i></div>
                            <div>
                                <small class="text">Bu Ay Toplanan Aidat</small>
                                <h4 class="mb-0">₺142.500</h4>
                            </div>
                        </div>

                        <div class="stat-item">
                            <div class="stat-icon"><i class="fas fa-users"></i></div>
                            <div>
                                <small class="text">Sakin Memnuniyeti</small>
                                <h4 class="mb-0">%98.5</h4>
                            </div>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted mb-2 d-block">Doluluk Oranı</small>
                            <div class="progress" style="height: 8px; background: rgba(255,255,255,0.1);">
                                <div class="progress-bar" role="progressbar" style="width: 85%; background-color: var(--primary-red);" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>

                    <div class="glass-panel" style="position: absolute; top: 30px; left: -30px; z-index: -1; width: 100%; opacity: 0.4; transform: scale(0.9);">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>