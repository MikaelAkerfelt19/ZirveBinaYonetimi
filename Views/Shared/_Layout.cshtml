<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zirve Bina Yönetimi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="page-loader">
        <img src="~/img/logo.png" alt="Zirve Logo" style="height: 350px; border-radius: 10%;">
    </div>

    <header>
        <nav class="navbar navbar-expand-sm fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" alt="Zirve Bina Yönetimi" class="nav-logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="fa fa-bars" style="color:white;"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Hizmetler</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Kurumsal</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">İletişim</a></li>
                    </ul>
                    <div class="ms-4">
                        <a href="#" class="btn-premium">Giriş Yap</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Sayfa Açılış Animasyonu
        window.addEventListener("load", () => {
            const tl = gsap.timeline();

            tl.to(".page-loader img", { scale: 1.5, opacity: 0, duration: 0.5, ease: "power2.inOut" })
              .to(".page-loader", { y: "-100%", duration: 0.8, ease: "power4.inOut" }, "-=0.2")
              .from(".navbar", { y: -50, opacity: 0, duration: 0.5 }, "-=0.4")
              .from(".hero-animate", { y: 50, opacity: 0, stagger: 0.2, duration: 0.8, ease: "power2.out" }, "-=0.3");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>